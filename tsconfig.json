{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declarationMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "module": "ESNext",
    "rootDir": "./src",
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["examples/*", "scripts/*"]
}
